<Window x:Class="Medias.Forms.AddAuthors"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Medias.Forms"
        mc:Ignorable="d"
        Title="AddAuthors"
        WindowStartupLocation="CenterScreen"
        Height="278" Width="400"
        MaxHeight="278" MaxWidth="400"
        MinHeight="278" MinWidth="400">
    <Grid>
        <Grid Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

         
            <TextBox x:Name="AuthorName" Margin="10,5,10,0" VerticalAlignment="Center" HorizontalAlignment="Stretch"></TextBox>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10,0,10,0" >
                <Button Content="Add" Click="AddAuthor_Click" Margin="5"/>
                <Button Content="Delete" Click="DeleteAuthor_Click" Margin="5"/>
            </StackPanel>

            <ListBox Margin="10,10,10,-174" Grid.Row="2" />
        </Grid>
    </Grid>
</Window>
