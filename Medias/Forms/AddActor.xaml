<Window x:Class="Medias.Forms.AddActor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Medias.Forms"
        mc:Ignorable="d"
                WindowStartupLocation="CenterScreen"

        Title="AddActor"
        MaxHeight="200" MaxWidth="250"
        MinHeight="200" MinWidth="250"
        >
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label   Grid.Row="0"  Content="Name:"/>
            <TextBox VerticalAlignment="Top" Grid.Row="1" Margin="1" x:Name="txtName"/>

            <Label   Grid.Row="2"  Content="Character name:"/>
            <TextBox VerticalAlignment="Top"  Grid.Row="3" Margin="1" x:Name="txtCharacterName"/>
        </Grid>
        <Button Grid.Row="1" Margin="25,1,25,1" FontSize="13" Content="Save" Click="Save_Click"/>

    </Grid>
</Window>
