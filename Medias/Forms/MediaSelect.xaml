<Window x:Class="Medias.Forms.MediaSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MediaSelect"         
        WindowStartupLocation="CenterScreen"
        Height="150" Width="225"
        MinHeight="150" MinWidth="225"
        MaxHeight="150" MaxWidth="225">
    <Window.Background>
        <ImageBrush ImageSource="/istockphoto-514456378-612x612.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="75*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Label  Content="Select series or movie" HorizontalAlignment="Center" VerticalAlignment="Top" />
        </Grid>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Margin="1" Height="30" Width="95" Grid.Column="0" Content="Series" Click="Series_Click" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
            <Button Margin="1" Height="30" Width="95" Grid.Column="1" Content="Movie"  Click="Movie_Click" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"  />

        </Grid>

    </Grid>
</Window>
