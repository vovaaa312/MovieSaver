<Window x:Class="Medias.Forms.MediaSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MediaSelect"         
        WindowStartupLocation="CenterScreen"
        Height="150" Width="200"
        MinHeight="150" MinWidth="200"
        MaxHeight="150" MaxWidth="200">
    <Grid>
        <Label Content="Select series or movie" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,21,0,0"/>
        <Button Content="Series" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="75" Click="Series_Click"/>
        <Button Content="Movie" Click="Movie_Click" HorizontalAlignment="Right" Margin="0,72,10,0" VerticalAlignment="Top" Width="75" />
    </Grid>
</Window>
